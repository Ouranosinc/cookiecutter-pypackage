{%- set license_spdx_codes = {
    'MIT license': 'MIT',
    'BSD license': 'BSD-3-Clause',
    'ISC license': 'ISC',
    'Apache Software License 2.0': 'Apache-2.0',
    'GNU General Public License v3': 'GPL-3.0-or-later',
    'Not open source': 'N/A'
} -%}
{%- set license_rights = {
    'MIT license': 'open',
    'BSD license': 'open',
    'ISC license': 'open',
    'Apache Software License 2.0': 'open',
    'GNU General Public License v3': 'open',
    'Not open source': 'closed'
} -%}
{
  "title": "{{ cookiecutter.project_name }}",
  "creators": [
    {
      {% set parts = cookiecutter.full_name.split() -%}
      {%- if parts|length > 1 -%}
      "name": "{{ parts[-1] }}, {{ ' '.join(parts[:-1]) }}"
      {%- else -%}
      "name": "{{ cookiecutter.full_name }}"
      {%- endif -%}
      {%- if cookiecutter.orcid_id != 'N/A' %},
      "orcid": "{{ cookiecutter.orcid_id }}"
      {%- endif %}
    }
  ],
  "keywords": [
    "{{ cookiecutter.project_slug }}"
  ],
  "license": "{{ license_spdx_codes[cookiecutter.open_source_license] }}",
  "language": "eng",
  "communities": [],
  "upload_type": "software",
  "access_right": "{{ license_rights[cookiecutter.open_source_license] }}"
}
