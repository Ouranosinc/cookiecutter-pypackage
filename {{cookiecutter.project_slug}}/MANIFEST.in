include AUTHORS.rst
{% endif -%}
include CONTRIBUTING.rst
include HISTORY.rst
{% if cookiecutter.open_source_license != 'Not open source' -%}
include LICENSE
{% endif -%}
include README.rst
include requirements_dev.txt
